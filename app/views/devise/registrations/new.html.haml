.usersNew
  .usersNewHeader 
    = link_to '' do 
      = image_tag asset_path("material/logo/logo.png")
  .layout
    .layout__left
    .layout__center 
      %h1 会員登録
      .center__content
        = form_with scope: resource, as: resource_name, url: registration_path(resource_name) do |f|
          .usersNewWrapper
            .sign__label
              %label.sign__label__head
                ニックネーム
              %span.sign__label__required
                必須
            .usersNewform
              = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "usersNewform__defalt"
            .sign__label
              %label.sign__label__head
                メールアドレス
              %span.sign__label__required
                必須
            .usersNewform
              = f.email_field :email, autofocus: true, placeholder: "Eメール", class: "usersNewform__defalt"
            .sign__label
              %label.sign__label__head
                パスワード
              %span.sign__label__required
                必須
            .usersNewform
              = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "usersNewform__defalt"
            .sign__label
              %label.sign__label__head
                パスワード（確認）
              %span.sign__label__required
                必須
            .usersNewform
              = f.password_field :password, confirmation: "off", placeholder: "パスワードの確認", class: "usersNewform__defalt"
            .sign__label
              %label.sign__label__head
                お名前（全角）
              %span.sign__label__required
                必須
            .usersNewform
              = f.text_field :family_name, autofocus: true, placeholder: "名字", class: "usersNewform__half"
              = f.text_field :first_name, autofocus: true, placeholder: "名前", class: "usersNewform__half"
            .sign__label
              %label.sign__label__head
                お名前カナ（全角）
              %span.sign__label__required
                必須
            .usersNewform
              = f.text_field :family_name_kana, autofocus: true, placeholder: "名字カナ", class: "usersNewform__half"
              = f.text_field :first_name_kana, autofocus: true, placeholder: "名前カナ", class: "usersNewform__half"
            .sign__label
              %label.sign__label__head
                生年月日
              %span.sign__label__required
                必須
            .select__form
              = f.date_select :birthday, use_month_numbers: true, start_year: Time.now.year, end_year: (Time.now.year - 50), default: Date.new(Time.now.year,Time.now.month,Time.now.day)
            .usersNewLogin
              .usersNewLogin__frame
                = f.submit "登録する", class: "usersNewLogin__frame__btn"
    .layout__right
  .usersNewfooter
    = link_to '#' do 
      = image_tag asset_path("material/logo/logo-white.png")


