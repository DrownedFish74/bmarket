.usersNew
  .usersNewHeader 
    = link_to '' do 
      = image_tag asset_path("material/logo/logo.png")
      -# とりあえずimage_tag使ってる
  .layout
    .layout__left
    .layout__center 
      %h1 会員登録
      .center__content
        %form(action="")
          .usersNewWrapper
            -# ここから
            .sign__label
              %label.sign__label__head
                ニックネーム
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__defalt{type: "text",placeholder: "（例）フリマ太郎"}
              -# ここで１塊
            .sign__label
              %label.sign__label__head
                メールアドレス
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__defalt{type: "email",placeholder: "PC・携帯どちらでも可"}
              -# ここは%form_withで書く予定
            .sign__label
              %label.sign__label__head
                パスワード
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__defalt{type: "password",placeholder: "7文字以上の半角英数字"}
              -# タグ要確認
            .sign__label
              %label.sign__label__head
                パスワード（確認）
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__defalt{type:"password",placeholder: "再度入力"}
              -# タグ要確認
            .sign__label
              %label.sign__label__head
                お名前（全角）
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__half{type: "text",placeholder: "（例）山田"}
              %input.usersNewform__half{type: "text",placeholder: "（例）太郎"}
            .sign__label
              %label.sign__label__head
                お名前カナ（全角）
              %span.sign__label__required
                必須
            .usersNewform
              %input.usersNewform__half{type: "text",placeholder: "（例）ヤマダ"}
              %input.usersNewform__half{type: "text",placeholder: "（例）タロウ"}
            .sign__label
              %label.sign__label__head
                生年月日
              %span.sign__label__required
                必須

            .birthdaySelect
              %select.select__defalt
                %option 1950
                %option 1951
                -# ここのoptionはとりあえず
              %span.select__name 年
              %select.select__half
                %option 1
                %option 2
              %span.select__name月
              %select.select__half
                %option 1
                %option 2
              %span.select__name 日

            .usersNewLogin
              .usersNewLogin__frame
                = link_to "#", class: "usersNewLogin__frame__btn" do
                  登録する

    .layout__right
    
  .usersNewfooter
    = link_to '#' do 
      = image_tag asset_path("material/logo/logo-white.png")
