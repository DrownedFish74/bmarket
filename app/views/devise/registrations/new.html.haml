= form_with scope: resource, as: resource_name, url: registration_path(resource_name) do |f|
  .form-group
    = f.text_field :family_name, autofocus: true, placeholder: "名字", class: "form-control"
  .form-group
    = f.text_field :first_name, autofocus: true, placeholder: "名前", class: "form-control"
  .form-group
    = f.text_field :family_name_kana, autofocus: true, placeholder: "名字かな", class: "form-control"
  .form-group
    = f.text_field :first_name_kana, autofocus: true, placeholder: "名前かな", class: "form-control"
  .form-group
    = f.text_field :nickname, autofocus: true, placeholder: "ニックネーム", class: "form-control"
  .form-group
    = f.email_field :email, autofocus: true, placeholder: "Eメール", class: "form-control"
  .form-group
    = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control"
  .form-group
    = f.label :birthday,"生年月日", class: "signup-main__label"
    %span.signup-main__require
      必須
    %br
    = f.date_select :birthday, use_month_numbers: true, start_year: Time.now.year, end_year: (Time.now.year - 50), default: Date.new(Time.now.year,Time.now.month,Time.now.day)
  .actions
    = f.submit "登録する", class: "btn"