- if user_signed_in?
  - if product.like_user(product.id,current_user.id)
    .favoriteDelete
      =link_to favorite_path(product), method: "DELETE", remote: true do
        /= icon('fa', 'star',class: 'icon')
        お気に入り
        /= favorites.length
  - else
    .favoritePost
      = form_with(model:favorite,local:true,url:"/favorites") do |f|
        = f.hidden_field :product_id,value:product.id
        = f.submit "お気に入り"

-else
  .favoritePost
    = icon('fa', 'star',class: 'icon')
    お気に入り
    /= favorites.length